{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build:blink watch",
            "type": "shell",
            "command": "blink src/remotes/init -w",
            "problemMatcher": {
                "pattern": {
                    "regexp": "^error: (.*)",
                    "message": 1
                }
            }
        },
        {
            "label": "sourcemap watch",
            "type": "shell",
            "command": "rojo-sourcemap dev.project.json -o sourcemap.json --include-non-scripts --watch",
            "problemMatcher": {
                "pattern": {
                    "regexp": "^error: (.*)",
                    "message": 1
                }
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "scripts/release-build",
            "problemMatcher": {
                "pattern": {
                    "regexp": "^error: (.*)",
                    "message": 1
                }
            }
        },
        {
            "label": "build:dev",
            "type": "shell",
            "command": "scripts/dev-build",
            "problemMatcher": {
                "pattern": {
                    "regexp": "^error: (.*)",
                    "message": 1
                }
            }
        },
        {
            "label": "build:blink",
            "type": "shell",
            "command": "blink src/remotes/init",
            "problemMatcher": {
                "pattern": {
                    "regexp": "^error: (.*)",
                    "message": 1
                }
            }
        },
        {
            "label": "install:packages",
            "type": "shell",
            "command": "scripts/wally-install game.project.json",
            "problemMatcher": {
                "pattern": {
                    "regexp": "^error: (.*)",
                    "message": 1
                }
            }
        },
        {
            "label": "run:tests",
            "type": "shell",
            "command": "scripts/run-tests",
            "problemMatcher": {
                "pattern": {
                    "regexp": "^error: (.*)",
                    "message": 1
                }
            }
        }
    ]
}